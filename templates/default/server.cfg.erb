topicprefix = /topic/
main_collective = mcollective
collectives = mcollective
direct_addressing = y
identity = <%= @node['fqdn'] %>
libdir = <%= @site_plugins %>:<%= @node['mcollective']['libdir'] %>
logfile = <%= @node['mcollective']['logfile'] %>
loglevel = <%= @node['mcollective']['loglevel'] %>
daemonize = 1

# Plugins
securityprovider = <%= @node['mcollective']['securityprovider'] %>
<%- if @node['mcollective']['securityprovider'] == "psk" %>
plugin.psk =  <%= @node['mcollective']['psk'] %>
<%- end %>

connector = <%= @node['mcollective']['connector'] %>

# Facts
<% if @node['mcollective']['factsource'] == 'ohai' %>
factsource = opscodeohai
fact_cache_time = 300
<% else %>
factsource = yaml
plugin.yaml = /etc/mcollective/facts.yaml
<% end %>

# Classes
classesfile = /var/tmp/chefnode.txt
